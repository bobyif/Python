<LoginScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'lLDixTz.jpg'
    GridLayout:
        cols: 1
        RelativeLayout:
            cols: 1
            Image:
                source: "5285db68-9ac5-47c3-868a-b5e3c611c44b_200x200.png"
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.40}
        RelativeLayout:
            cols: 1
            TextInput:
                id: username
                hint_text: "Username"
                font_size: "20sp"
                size_hint: 0.35, 0.33
                pos_hint: {"center_x": 0.32, "center_y": 0.5}
            TextInput:
                id: pword
                hint_text: "Password"
                font_size: "20sp"
                hint_text: "Password"
                size_hint: 0.35, 0.33
                pos_hint: {"center_x": 0.69, "center_y": 0.5}
        RelativeLayout:
            Button:
                text: "Login"
                background_color: 1,1,155,1
                opacity: 1 if self.state == "normal" else 0.5
                size_hint: 0.30, 0.30
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                on_press: root.login(root.ids.username.text, root.ids.pword.text)
            Label:
                text_size: self.size
                valign: 'middle'
                color: 1,255,255,1
                id: login_wrong
                text: ""
                font_size: "20sp"
                size_hint: 0.30, 0.30
                pos_hint: {"center_x": 0.55, "center_Y": 0.55}


        RelativeLayout:
            cols:3
            Button:
                text:"Forgot password"
                color: 100,255,1,1
                background_color: 1,1,155,0
                size_hint: 0.30, 0.55
                font_size: "19sp"
                pos_hint: {"center_x": 0.15, "center_Y": 0.41}
                opacity: 1 if self.state == "normal" else 0.5


            Button:
                text:"Sign up"
                color: 100,255,1,1
                background_color: 1,1,155,0
                opacity: 1 if self.state=="normal" else 0.5
                font_size: "19sp"
                size_hint: 0.20, 0.55
                pos_hint: {"center_x": 0.85, "center_Y": 0.41}
                on_press: root.sign_up()

<SignUpScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'lLDixTz.jpg'
    RelativeLayout:
        cols: 1
        Image:
            source: "5285db68-9ac5-47c3-868a-b5e3c611c44b_200x200.png"
            size_hint: 0.25, 0.25
            pos_hint: {"center_x": 0.49, "center_y": 0.86}
    GridLayout:
        cols:1
        padding: 100, 0
        spacing: 1, 1
        Label:
            text: ""
        GridLayout:
            cols:1
            padding: 50, 30
            TextInput:
                id: uname
                hint_text: "Username"
                font_size: '35sp'
                haling: "center"
        GridLayout:
            cols:1
            padding: 50, 30
            TextInput:
                id: pword
                hint_text: "Password"
                password: True
                font_size: '35sp'
                haling: "center"
        GridLayout:
            cols:1
            padding: 50, 20
            Button:
                text: "Sign up"
                haling: "center"
                font_size: '35sp'
                background_color: 1,1,155,0.6
                opacity: 1 if self.state == "normal" else 0.5
                on_press: root.sign_up_list(root.ids.uname.text, root.ids.pword.text)


<LoginSuccess>
    GridLayout:
        cols:1
        Image:
            source: root.scrape()


<RootWidget>
    LoginScreen
        name: "login_screen"
    SignUpScreen
        name: "sign_up_screen"
    LoginSuccess
        name: "login_success"