<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: "20sp"
            TextInput:
                id: username
                hint_text: "Username"
                font_size: "20sp"
            TextInput:
                id: password
                password: True
                font_size: "20sp"
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    font_size: "20sp"
                    size_hint: 0.3, 0.5
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text: "Forgot Password"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                font_size: "17sp"
                color: 0.1, 0.7, 1, 1
            Button:
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
                font_size: "17sp"
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 40
        Label:
            text: "Sign up for happy life!"
            font_size: '25sp'
        TextInput:
            id: username
            hint_text: "Username"
            font_size: '25sp'
        TextInput:
            id: password
            hint_text: "Password"
            password: True
            haling: "center"
            font_size: '25sp'
        Button:
            text: "Submit"
            font_size: '40sp'
            opacity: 1 if self.state == "normal" else 0.5
            color: 0.1, 0.7, 1, 1
            background_color: 0, 0, 0, 0
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>
    GridLayout:
        cols:1
        Label:
            text: "Sign us successful"
        Button:
            text: "Login page"
            on_press: root.go_login()

<LoginScreenSuccess>
    GridLayout:
        padding: 30, 30
        spacing: 30, 30
        cols:1
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint: 0.30, 0.66
                pos_hint: {"center_x": 0.86, "center_y": 0.78}
        Label:
            text: "How do you fell"
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved..."
        RelativeLayout:
            Button:
                text: "Enlighten me"
                on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "Sign_Up_Screen_Success"
    LoginScreenSuccess:
        name: "login_screen_success"
